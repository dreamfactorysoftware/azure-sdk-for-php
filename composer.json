{
	"name":              "dreamfactory/azure-sdk-for-php",
	"description":       "This project provides a set of PHP client libraries that make it easy to access Windows Azure tables, blobs, queues, service runtime and service management APIs.",
	"keywords":          ["php", "azure", "sdk"],
	"license":           "Apache-2.0",
	"authors":           [
		{
			"name":  "Azure PHP SDK",
			"email": "azurephpsdk@microsoft.com"
		},
		{
			"name":  "Jerry Ablan",
			"email": "jerryablan@dreamfactory.com",
			"role":  "DreamFactory Package Maintainer"
		}
	],
	"repositories":      [
		{
			"type": "pear",
			"url":  "http://pear.php.net"
		}
	],
	"require":           {
		"pear-pear.php.net/HTTP_Request2":   "*",
		"pear-pear.php.net/Net_URL2":        "*",
		"pear-pear.php.net/Mail_Mime":       "*",
		"pear-pear.php.net/Mail_mimeDecode": "*"
	},
	"require-dev":       {
		"phpunit/phpunit":    "~3.7@stable",
		"mikey179/vfsStream": "~1.2@stable"
	},
	"minimum-stability": "dev",
	"extra":             {
		"branch-alias": {
			"dev-develop": "0.4.x-dev"
		}
	},
	"autoload-dev":      {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"autoload":          {
		"psr-4": {
			"WindowsAzure\\": "src/"
		}
	}
}
